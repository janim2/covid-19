<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorAccent"
    tools:context=".Report_"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.CardView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:text="Report Covid 19 Case"
            android:textSize="20sp"
            android:orientation="vertical"
            android:textColor="@android:color/white"
            android:gravity="center_horizontal"
            android:paddingTop="20dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/complain"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Report suspected case"
                android:fontFamily="@font/life"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:paddingTop="5dp"
                android:gravity="center_horizontal"/>

        </LinearLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="100dp"
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            android:rotation="-70">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:rotation="70"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.466">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <com.joooonho.SelectableRoundedImageView
                        android:id="@+id/call"
                        android:layout_width="43dp"
                        android:layout_height="43dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/telephone"
                        app:sriv_border_color="@color/colorPrimaryDark"
                        app:sriv_border_width="2dip"
                        android:layout_marginRight="15dp"
                        app:sriv_left_bottom_corner_radius="100dip"
                        app:sriv_left_top_corner_radius="100dip"
                        app:sriv_oval="false"
                        app:sriv_right_bottom_corner_radius="100dip"
                        app:sriv_right_top_corner_radius="100dip" />

                    <com.joooonho.SelectableRoundedImageView
                        android:id="@+id/whatsapp"
                        android:layout_width="43dp"
                        android:layout_height="43dp"
                        android:padding="5dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/whatsapp"
                        app:sriv_border_color="@color/colorPrimaryDark"
                        app:sriv_border_width="2dip"
                        app:sriv_left_bottom_corner_radius="100dip"
                        app:sriv_left_top_corner_radius="100dip"
                        app:sriv_oval="false"
                        app:sriv_right_bottom_corner_radius="100dip"
                        app:sriv_right_top_corner_radius="100dip" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginBottom="15dp"
                    android:background="@color/text_color"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OR"
                    android:fontFamily="@font/life"
                    android:textSize="15sp"
                    android:background="@color/colorPrimary"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/text_color"
                    android:layout_gravity="center"
                    android:layout_marginTop="-22dp"/>

                <EditText
                    android:id="@+id/subject"
                 android:layout_width="250dp"
                 android:layout_height="43dp"
                 android:hint="Subject"
                 android:text="Suspected Case"
                android:fontFamily="@font/life"
                android:textSize="15sp"
                 android:layout_marginTop="20dp"
                 android:background="@android:drawable/editbox_background"/>

            <MultiAutoCompleteTextView
                android:id="@+id/message"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:hint="Message"
                android:minHeight="80dp"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/life"
                android:inputType="textMultiLine"
                android:background="@android:drawable/editbox_background"/>

                <com.joooonho.SelectableRoundedImageView
                    android:id="@+id/send"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/correct"
                    app:sriv_border_color="@color/colorPrimaryDark"
                    app:sriv_border_width="2dip"
                    app:sriv_left_bottom_corner_radius="100dip"
                    app:sriv_left_top_corner_radius="100dip"
                    app:sriv_oval="false"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    app:sriv_right_bottom_corner_radius="100dip"
                    app:sriv_right_top_corner_radius="100dip" />


            </LinearLayout>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
